# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

def run_build
  build_app(
    workspace: "the-liturgists.xcworkspace",
    scheme: "the-liturgists",
  )
end

platform :ios do
  desc "Bump the build number and tag it"
  lane :beta_bump do
    # Ensure that your git status is not dirty
    ensure_git_status_clean

    # Increment the build number (not the version number)
    # Providing the xcodeproj is optional
    increment_build_number(xcodeproj: "the-liturgists.xcodeproj")

    # Commit the version bump
    commit_version_bump(xcodeproj: "the-liturgists.xcodeproj")

    # Add a git tag for this build. This will automatically
    # use an appropriate git tag name
    add_git_tag

    # Push the new commit and tag back to your git remote
    push_to_git_remote
  end

  desc "Run a new beta build (but don't upload it)"
  lane :build do
    run_build
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    run_build
    upload_to_testflight
  end
end
